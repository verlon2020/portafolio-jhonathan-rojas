<!-- Header & Projects.astro -->
<style>
  /* Paleta de colores minimalista y moderna */
  :root {
    --bg-color: #11111b;
    --text-primary: #ffffff;
    --text-secondary: #c0c0c5;
    --accent-violet: #673AB7;
    --accent-pink: #FF6F00;
    --card-bg: #1c1c27;
    --hover-lift: #242430;
    --transition-speed: 0.4s;
  }

  /* Reset básico */
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  body {
    background-color: var(--bg-color);
    font-family: 'Segoe UI', sans-serif;
    color: var(--text-secondary);
  }

  /* Contenedor principal */
  .container {
    max-width: 1000px;
    margin: 0 auto;
    padding: 3rem 1rem;
  }

  /* Sección de perfil */
  .profile-section {
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    gap: 2rem;
    background: linear-gradient(145deg, #1a1a25 0%, #11111b 100%);
    padding: 2.5rem;
    border-radius: 16px;
    box-shadow: 0 8px 20px rgba(103, 58, 183, 0.15);
    position: relative;
    overflow: hidden;
    animation: fadeInUp 1s ease-out;
  }

  /* Efecto de partículas en el fondo */
  .profile-section::before {
    content: "";
    position: absolute;
    top: 0; left: 0;
    width: 200%; height: 200%;
    background: radial-gradient(circle at 20% 30%, rgba(103, 58, 183, 0.1) 0%, transparent 50%), 
                radial-gradient(circle at 80% 70%, rgba(255, 111, 0, 0.1) 0%, transparent 50%);
    transform: rotate(30deg) translate(-50%, -50%);
    animation: particleMove 25s infinite linear;
  }

  @keyframes particleMove {
    0% { transform: rotate(30deg) translate(-50%, -50%); }
    100% { transform: rotate(30deg) translate(-60%, -60%); }
  }

  /* Foto de perfil */
  .profile-img {
    width: 180px;
    height: 180px;
    border-radius: 50%;
    object-fit: cover;
    border: 3px solid var(--accent-violet);
    box-shadow: 0 0 25px rgba(103, 58, 183, 0.4);
    transition: all var(--transition-speed) ease;
    position: relative;
    z-index: 2;
  }

  .profile-img:hover {
    transform: scale(1.08) rotate(2deg);
    box-shadow: 0 0 35px rgba(103, 58, 183, 0.6);
  }

  /* Efecto de brillo al hacer hover */
  .profile-img::after {
    content: "";
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: radial-gradient(circle, rgba(255,255,255,0.2) 0%, transparent 70%);
    opacity: 0;
    transition: opacity 0.3s ease;
    pointer-events: none;
    z-index: 1;
  }

  .profile-img:hover::after {
    opacity: 1;
  }

  /* Información del perfil */
  .profile-info {
    flex: 1;
    min-width: 300px;
  }

  .profile-name {
    font-size: 2.2rem;
    color: var(--text-primary);
    margin-bottom: 0.5rem;
    animation: fadeInDown 0.8s ease-in;
  }

  .profile-title {
    font-size: 1.1rem;
    color: var(--accent-violet);
    margin-bottom: 1rem;
    font-weight: 400;
  }

  .profile-description {
    font-size: 1.05rem;
    line-height: 1.7;
    color: var(--text-secondary);
    animation: fadeIn 1.2s ease-in;
  }

  /* Sección de proyectos */
  .projects-section {
    padding: 2.5rem 1rem;
    background-color: var(--card-bg);
    border-radius: 16px;
    margin-top: 2rem;
    box-shadow: 0 8px 20px rgba(255, 111, 0, 0.1);
  }

  .projects-title {
    font-size: 1.8rem;
    color: var(--text-primary);
    margin-bottom: 1.5rem;
    border-left: 5px solid var(--accent-pink);
    padding-left: 1rem;
  }

  .projects-list {
    list-style: none;
    display: grid;
    gap: 1.5rem;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
  }

  .project-card {
    background-color: #2a2a37;
    border-radius: 12px;
    padding: 1.5rem;
    transition: all var(--transition-speed) ease;
    position: relative;
    overflow: hidden;
    cursor: pointer;
    border: 1px solid rgba(255, 111, 0, 0.2);
  }

  .project-card:hover {
    transform: translateY(-8px) scale(1.02);
    background-color: var(--hover-lift);
    box-shadow: 0 10px 25px rgba(255, 111, 0, 0.2);
  }

  /* Efecto de degradado en hover */
  .project-card::before {
    content: "";
    position: absolute;
    top: 0; left: -50%;
    width: 200%;
    height: 100%;
    background: linear-gradient(120deg, rgba(103, 58, 183, 0.1), rgba(255, 111, 0, 0.1));
    transform: skewX(-30deg);
    transition: all 0.5s ease;
    opacity: 0;
  }

  .project-card:hover::before {
    left: 0;
    opacity: 1;
  }

  .project-title {
    font-size: 1.2rem;
    color: var(--accent-pink);
    margin-bottom: 0.5rem;
  }

  .project-description {
    font-size: 0.95rem;
    color: var(--text-secondary);
  }

  /* Botón de ver más */
  .cta-button {
    display: inline-block;
    margin-top: 2rem;
    padding: 0.8rem 1.5rem;
    background: linear-gradient(45deg, var(--accent-violet), var(--accent-pink));
    color: #fff;
    border-radius: 30px;
    font-weight: 600;
    text-decoration: none;
    transition: all var(--transition-speed) ease;
    animation: pulse 2s infinite, float 2s ease-in-out infinite;
    box-shadow: 0 5px 15px rgba(103, 58, 183, 0.3);
  }

  .cta-button:hover {
    transform: scale(1.05) rotate(1deg);
    box-shadow: 0 8px 20px rgba(103, 58, 183, 0.5);
  }

  /* Animaciones */
  @keyframes fadeIn {
    from {opacity: 0; transform: translateY(10px);}
    to {opacity: 1; transform: translateY(0);}
  }

  @keyframes fadeInDown {
    from {
      opacity: 0;
      transform: translateY(-30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes pulse {
    0% {transform: scale(1);}
    50% {transform: scale(1.03);}
    100% {transform: scale(1);}
  }

  @keyframes float {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-5px); }
  }

  /* Responsive */
  @media (max-width: 768px) {
    .profile-section {
      flex-direction: column;
      text-align: center;
    }

    .profile-img {
      width: 150px;
      height: 150px;
    }

    .projects-title {
      font-size: 1.5rem;
    }
  }
</style>

