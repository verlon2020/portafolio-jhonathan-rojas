<!-- Header.astro -->
<style>
  /* Nueva paleta de colores */
  :root {
    --bg-color: #0d0d0d;
    --text-primary: #ffffff;
    --text-secondary: #b3b3b3;
    --accent-teal: #16a085;
    --accent-orange: #e67e22;
    --hover-bg: rgba(22, 160, 133, 0.1);
    --transition-speed: 0.3s;
  }

  .header-section {
    padding: 3rem 1rem;
    background: linear-gradient(135deg, #0d0d0d 0%, #1a1a1a 100%);
    color: var(--text-primary);
    text-align: center;
    animation: fadeInUp 1s ease-out;
    position: relative;
    overflow: hidden;
  }

  /* Efecto de partículas en el fondo (opcional) */
  .header-section::before {
    content: "";
    position: absolute;
    top: 0; left: 0;
    width: 100%; height: 100%;
    background: radial-gradient(circle at 20% 30%, rgba(22, 160, 133, 0.1) 0%, transparent 50%), 
                radial-gradient(circle at 80% 70%, rgba(230, 126, 34, 0.1) 0%, transparent 50%);
    animation: particleMove 20s infinite linear;
  }

  @keyframes particleMove {
    0% { transform: translate(0, 0); }
    100% { transform: translate(-10%, -10%); }
  }

  .profile-img {
    width: 140px;
    height: 140px;
    border-radius: 50%;
    object-fit: cover;
    border: 3px solid var(--accent-teal);
    box-shadow: 0 0 20px rgba(22, 160, 133, 0.4);
    transition: transform var(--transition-speed) ease, 
                box-shadow var(--transition-speed) ease;
    margin-bottom: 1.5rem;
    position: relative;
  }

  .profile-img:hover {
    transform: scale(1.1) rotate(3deg);
    box-shadow: 0 0 30px rgba(22, 160, 133, 0.7);
  }

  /* Efecto de brillo al hacer hover en la foto */
  .profile-img::after {
    content: "";
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: radial-gradient(circle, rgba(255,255,255,0.2) 0%, transparent 70%);
    opacity: 0;
    transition: opacity 0.3s ease;
    pointer-events: none;
  }

  .profile-img:hover::after {
    opacity: 1;
  }

  .name {
    font-size: 2.5rem;
    margin-bottom: 0.5rem;
    color: var(--text-primary);
    animation: fadeInDown 0.8s ease-in;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
  }

  .title {
    font-size: 1.2rem;
    color: var(--accent-teal);
    margin-bottom: 1rem;
    font-weight: 400;
  }

  .description {
    max-width: 600px;
    margin: 0 auto 2rem;
    font-size: 1.1rem;
    color: var(--text-secondary);
    line-height: 1.6;
    animation: fadeIn 1.2s ease-in;
  }

  .highlight-teal {
    color: var(--accent-teal);
    font-weight: 600;
  }

  .highlight-orange {
    color: var(--accent-orange);
    font-weight: 600;
  }

  .social-links {
    display: flex;
    justify-content: center;
    gap: 1.2rem;
    margin-top: 1.5rem;
    flex-wrap: wrap;
  }

  .social-link {
    text-decoration: none;
    color: var(--text-secondary);
    padding: 0.5rem 1rem;
    border-radius: 20px;
    transition: all var(--transition-speed) ease;
    position: relative;
    font-weight: 500;
  }

  .social-link::after {
    content: '';
    position: absolute;
    width: 0%;
    height: 2px;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    background: linear-gradient(90deg, var(--accent-teal), var(--accent-orange));
    transition: all var(--transition-speed) ease;
  }

  .social-link:hover {
    color: var(--accent-teal);
    background-color: var(--hover-bg);
  }

  .social-link:hover::after {
    width: 100%;
  }

  .cta-button {
    display: inline-block;
    margin-top: 2rem;
    padding: 0.8rem 1.5rem;
    background: linear-gradient(45deg, var(--accent-teal), var(--accent-orange));
    color: #fff;
    border-radius: 30px;
    font-weight: 600;
    text-decoration: none;
    transition: all var(--transition-speed) ease;
    animation: pulse 2s infinite, float 2s ease-in-out infinite;
    box-shadow: 0 5px 15px rgba(22, 160, 133, 0.3);
  }

  .cta-button:hover {
    transform: scale(1.05) rotate(1deg);
    box-shadow: 0 8px 20px rgba(22, 160, 133, 0.5);
  }

  /* Nuevas animaciones */
  @keyframes fadeIn {
    from {opacity: 0; transform: translateY(10px);}
    to {opacity: 1; transform: translateY(0);}
  }

  @keyframes fadeInDown {
    from {
      opacity: 0;
      transform: translateY(-30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes pulse {
    0% {transform: scale(1);}
    50% {transform: scale(1.03);}
    100% {transform: scale(1);}
  }

  @keyframes float {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-5px); }
  }

  /* Responsive */
  @media (max-width: 600px) {
    .name {
      font-size: 2rem;
    }
    
    .description {
      font-size: 1rem;
    }
  }
</style>

