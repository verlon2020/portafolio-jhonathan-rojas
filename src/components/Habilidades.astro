<!-- Skills Component -->
<style>
  /* Paleta de colores moderna y vibrante */
  :root {
    --bg-section: #0f0f12;
    --text-primary: #ffffff;
    --text-secondary: #b0b0b5;
    --gradient-start: #00e6c3;  /* Turquesa brillante */
    --gradient-mid: #ff4d4d;    /* Rojo coral */
    --gradient-end: #ffcc00;    /* Amarillo cálido */
    --card-bg: #1a1a22;
    --hover-lift: #22222c;
    --transition-speed: 0.4s;
  }

  /* Reset básico */
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  body {
    background-color: var(--bg-section);
    font-family: 'Segoe UI', sans-serif;
    color: var(--text-secondary);
  }

  /* Contenedor principal */
  .skills-container {
    max-width: 1000px;
    margin: 0 auto;
    padding: 3rem 1rem;
  }

  /* Sección de habilidades */
  .skills-section {
    background: linear-gradient(145deg, #121218 0%, #0f0f12 100%);
    border-radius: 16px;
    padding: 2.5rem;
    box-shadow: 0 10px 25px rgba(0, 230, 195, 0.1);
    position: relative;
    overflow: hidden;
    animation: fadeInUp 1s ease-out;
  }

  /* Efecto de partículas en el fondo */
  .skills-section::before {
    content: "";
    position: absolute;
    top: 0; left: 0;
    width: 200%; height: 200%;
    background: radial-gradient(circle at 20% 30%, rgba(0, 230, 195, 0.1) 0%, transparent 50%), 
                radial-gradient(circle at 80% 70%, rgba(255, 77, 77, 0.1) 0%, transparent 50%);
    transform: rotate(30deg) translate(-50%, -50%);
    animation: particleMove 25s infinite linear;
  }

  @keyframes particleMove {
    0% { transform: rotate(30deg) translate(-50%, -50%); }
    100% { transform: rotate(30deg) translate(-60%, -60%); }
  }

  /* Título de la sección */
  .skills-title {
    font-size: 2rem;
    color: var(--text-primary);
    margin-bottom: 2rem;
    border-left: 5px solid var(--gradient-start);
    padding-left: 1rem;
    animation: fadeInDown 0.8s ease-in;
  }

  /* Lista de habilidades */
  .skills-list {
    display: grid;
    gap: 1.2rem;
    grid-template-columns: repeat(auto-fill, minmax(160px, 1fr));
    position: relative;
  }

  /* Tarjeta de habilidad individual */
  .skill-card {
    background: var(--card-bg);
    border-radius: 30px;
    padding: 1rem 1.2rem;
    text-align: center;
    transition: all var(--transition-speed) ease;
    cursor: pointer;
    position: relative;
    overflow: hidden;
    box-shadow: 0 4px 10px rgba(0, 230, 195, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.05);
  }

  /* Efecto de brillo al hacer hover */
  .skill-card::before {
    content: "";
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 70%);
    opacity: 0;
    transition: opacity 0.3s ease;
    pointer-events: none;
    z-index: 1;
  }

  /* Efecto de degradado lateral */
  .skill-card::after {
    content: "";
    position: absolute;
    top: 0; left: -50%;
    width: 200%;
    height: 100%;
    background: linear-gradient(120deg, 
      rgba(0, 230, 195, 0.1), 
      rgba(255, 77, 77, 0.1), 
      rgba(255, 204, 0, 0.1));
    transform: skewX(-30deg);
    transition: all 0.5s ease;
    opacity: 0;
    z-index: 0;
  }

  .skill-card:hover::before,
  .skill-card:hover::after {
    opacity: 1;
  }

  /* Texto de la habilidad */
  .skill-name {
    font-size: 1rem;
    font-weight: 600;
    color: var(--text-primary);
    position: relative;
    z-index: 2;
    transition: color var(--transition-speed) ease;
    background: linear-gradient(45deg, 
      var(--gradient-start), 
      var(--gradient-mid), 
      var(--gradient-end));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    animation: glowText 2s infinite alternate;
  }

  /* Animación de brillo en el texto */
  @keyframes glowText {
    0% { filter: brightness(1); }
    100% { filter: brightness(1.3); }
  }

  /* Efecto 3D al hacer hover */
  .skill-card:hover {
    transform: perspective(1000px) rotateY(5deg) scale(1.05);
    background: var(--hover-lift);
    box-shadow: 0 10px 20px rgba(0, 230, 195, 0.3);
    border: 1px solid rgba(0, 230, 195, 0.4);
  }

  /* Botón de ver más */
  .cta-button {
    display: inline-block;
    margin-top: 2.5rem;
    padding: 0.8rem 1.5rem;
    background: linear-gradient(45deg, var(--gradient-start), var(--gradient-mid), var(--gradient-end));
    color: #fff;
    border-radius: 30px;
    font-weight: 600;
    text-decoration: none;
    transition: all var(--transition-speed) ease;
    animation: pulse 2s infinite, float 2s ease-in-out infinite;
    box-shadow: 0 5px 15px rgba(0, 230, 195, 0.3);
  }

  .cta-button:hover {
    transform: scale(1.05) rotate(1deg);
    box-shadow: 0 8px 20px rgba(0, 230, 195, 0.5);
  }

  /* Animaciones */
  @keyframes fadeIn {
    from {opacity: 0; transform: translateY(10px);}
    to {opacity: 1; transform: translateY(0);}
  }

  @keyframes fadeInDown {
    from {
      opacity: 0;
      transform: translateY(-30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes pulse {
    0% {transform: scale(1);}
    50% {transform: scale(1.03);}
    100% {transform: scale(1);}
  }

  @keyframes float {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-5px); }
  }

  /* Responsive */
  @media (max-width: 768px) {
    .skills-title {
      font-size: 1.6rem;
    }

    .skills-list {
      grid-template-columns: repeat(auto-fill, minmax(140px, 1fr));
    }
  }
</style>

